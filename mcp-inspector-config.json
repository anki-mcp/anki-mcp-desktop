{
  "mcpServers": {
    "stdio-server": {
      "type": "stdio",
      "command": "node",
      "args": ["dist/main.js"],
      "env": {
        "MCP_SERVER_NAME": "anki-mcp-stdio",
        "MCP_SERVER_VERSION": "1.0.0"
      },
      "note": "Anki MCP server with STDIO transport - run manually"
    },
    "stdio-server-debug": {
      "type": "stdio",
      "command": "node",
      "args": ["--inspect-brk=9229", "dist/main.js"],
      "env": {
        "MCP_SERVER_NAME": "anki-mcp-stdio-debug",
        "MCP_SERVER_VERSION": "1.0.0",
        "LOG_LEVEL": "debug"
      },
      "note": "Anki MCP server with debugging enabled on port 9229"
    }
  }
}